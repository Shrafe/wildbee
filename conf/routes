# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /tasks                      controllers.TaskController.index
POST    /tasks                      controllers.TaskController.updateTask
POST    /createTask                 controllers.TaskController.createTask
POST    /deleteTask                 controllers.TaskController.deleteTask
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /users                      controllers.UsersController.index
POST    /users                      controllers.UsersController.create
PUT     /users                      controllers.UsersController.update
GET     /users/new                  controllers.UsersController.newUser
GET     /users/edit                 controllers.UsersController.edit
